# Database Configuration
DB_DRIVER=mysql
DB_DSN=root:root@tcp(localhost:3306)/cbt_test?charset=utf8mb4&parseTime=True&loc=Local
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MIN_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# Logging Configuration
LOG_LEVEL=-1
LOG_DIRECTORY=logs

# Server Configuration
